# Aliases
alias ll='ls -lhA'
alias mv='mv -i'
alias rm='rm -i'
alias cp='cp -i'
alias h='history'
alias vi='vim'

# Prompts and colors
export PS1="\033[32m\]\h \033[36m\][\t] \[\033[33m\w\033[0m\]\n\$ "
export CLICOLOR=true
export LSCOLORS=gxGxcxdxbxegedabagacad

# Editors
export EDITOR=vim

# Paths
export PATH=/usr/local/share/npm/bin/:/usr/local/bin:$PATH

