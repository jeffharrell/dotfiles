# ALIASES
alias ll='ls -lhA'
alias mv='mv -i'
alias rm='rm -i'
alias cp='cp -i'
alias h='history'
alias vi='vim'

# PROMPT AND COLORS
export PS1="\033[32m\]\h \033[36m\][\t] \[\033[33m\w\033[0m\]\n\$ "
export CLICOLOR=true
export LSCOLORS=gxGxcxdxbxegedabagacad

# EDITORS
export EDITOR=vim
export SVN_EDITOR=vim

# PATH
export PHP_PEAR_PHP_BIN=/opt/local/bin/php
export PATH=/opt/local/bin:/opt/local/sbin:$PATH

